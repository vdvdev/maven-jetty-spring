<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="workposition.properties"/>

    <bean id="priorCoach" class="com.coaching.coachs.FootbalCoach"></bean>

    <!--constructor injection-->
    <bean id="thirdCoach" class="com.coaching.coachs.BaseballCoachWithLuck" >
        <constructor-arg ref="luck1"/>
    </bean>

    <!--setter injection-->
    <bean id="4thCoach" class="com.coaching.coachs.FootballCoachWithLuck" >
        <property name="luck" ref="luck2"/>
        <property name="power" value="classic power"/>
        <property name="firstName" value="${head.trainer.firstname}"/>
    </bean>

    <bean id="luck1" class="com.coaching.luck.BaseLuck"></bean>
    <bean id="luck2" class="com.coaching.luck.AdvancedLuck"></bean>
</beans>

